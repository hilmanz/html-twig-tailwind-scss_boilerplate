{% extends 'templates/base.twig' %}

{% block title %}Home - My Website{% endblock %}
{% block description %}Welcome to our amazing website{% endblock %}

{% block content %}
<section class="hero bg-gradient-to-r from-blue-500 to-purple-600 text-white py-20">
    <div class="container mx-auto px-4 text-center">
        <h1 class="text-5xl font-bold mb-6 animate-fade-in">Welcome to Our Website</h1>
        <p class="text-xl mb-8 animate-slide-up">Building amazing experiences with modern web technologies</p>
        <a href="#" class="btn btn-primary inline-block px-8 py-3 bg-white text-blue-600 rounded-lg font-semibold hover:bg-gray-100 transition-colors">Get Started</a>
    </div>
</section>

<section class="features py-16">
    <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-12">Features</h2>
        <div class="grid md:grid-cols-3 gap-8">
            <div class="feature-card text-center p-6 rounded-lg shadow-lg">
                <h3 class="text-xl font-semibold mb-4">Modern Build Tools</h3>
                <p class="text-gray-600">Webpack 5 with optimized production builds</p>
            </div>
            <div class="feature-card text-center p-6 rounded-lg shadow-lg">
                <h3 class="text-xl font-semibold mb-4">Twig Templates</h3>
                <p class="text-gray-600">Flexible templating with component reusability</p>
            </div>
            <div class="feature-card text-center p-6 rounded-lg shadow-lg">
                <h3 class="text-xl font-semibold mb-4">Tailwind CSS v4</h3>
                <p class="text-gray-600">Latest utility-first CSS framework</p>
            </div>
        </div>
    </div>
</section>
{% endblock %}